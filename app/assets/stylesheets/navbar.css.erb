.navbar {
  /* background: rgba(0,0,0,0); */
  border-radius: 10px;
 height: 80px;
padding-bottom: 40px;
}

.navbar-position{

    margin-left: 30rem;

        width: 800px;

}

.vertical-nav {
  min-width: 17rem;
  width: 17rem;
  height: 100vh;
  position: absolute;
  top: 116px;
  left: 0;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.4s;
  margin-left: 300px;

}



/* for toggle behavior */

#sidebar.active {
  margin-left: -17rem;
}

#content.active {
  width: 100%;
  margin: 0;
}

@media (max-width: 768px) {
  #sidebar {
    margin-left: -17rem;
  }
  #sidebar.active {
    margin-left: 0;
  }
  #content {
    width: 100%;
    margin: 0;
  }
  #content.active {
    margin-left: 17rem;
    width: calc(100% - 17rem);
  }
}

