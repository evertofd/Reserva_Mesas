.img-navbar{
  width: 5rem;
  border-radius: 200px 200px 200px 200px;
  -moz-border-radius: 200px 200px 200px 200px;
  -webkit-border-radius: 200px 200px 200px 200px;
  border: 2px solid #000000;
}

.letra{
  font-family: 'Montserrat', sans-serif;
  font-weight: 400;
  font-size: 20px;
}

.navbar {
  border-radius: 10px;
  height: 80px;
  padding-bottom: 40px;
}

.colordark{
  background: #000000;
}

.custom-toggler.navbar-toggler {
  border-color: rgba(249, 249, 249, 0);
}



.vertical-nav {
  height: 50vh;
  position: absolute;
  top: 5rem;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.4s;
  z-index:99;
}



/* for toggle behavior */

#sidebar.active {
  margin-left: -17rem;
}

#content.active {
  width: 100%;
  margin: 0;
}

@media (max-width: 768px) {
  #sidebar {
    margin-left: -17rem;
  }
  #sidebar.active {
    margin-left: 0;
  }
  #content {
    width: 100%;
    margin: 0;
  }
  #content.active {
    margin-left: 17rem;
    width: calc(100% - 17rem);
  }
}



.border-md {
  border-width: 2px;
}

.btn-facebook {
  background: #405D9D;
  border: none;
}

.btn-facebook:hover, .btn-facebook:focus {
  background: #314879;
}
