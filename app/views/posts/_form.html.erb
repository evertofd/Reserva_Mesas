
<div class=" container text-center ta">

  <%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
      <% post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <% stars = {'cinco' => 5, 'cuatro' => 4, 'tres' => 3, 'dos' => 2,'uno' => 1  } %>
  <fieldset>

    <div class="form-group ">
      <div class="col-m-12">
        <%= form.text_field :title, autofocus: true, class: 'form-control', placeholder: 'Asunto del comentario' %>
      </div>
    </div>
    <div class="form-group  mx-auto d-flex my-4">
      <div class="border-bottom w-100"></div>
    </div>


    <div class="form-group">
      <div class="col-m-12">
        <%= form.text_area :content, class: 'form-control', placeholder: 'Contenido del comentario' %>
      </div>
    </div>
    <div class="form-group  mx-auto d-flex my-4">
      <div class="border-bottom w-100"></div>
    </div>



    <!--radio_button-->


    <div class="form clasificacion form-check-inline">

      <% stars.each do |star| %>
        <%= form.radio_button :star, star[1], :id => "star-" + star[1].to_s, class: "d-none" %>
        <label for="star-<%= star[1] %>">â˜…</label>
      <%end%>
    </div>




    <div class="form-group  mx-auto d-flex my-4">
      <div class="border-bottom w-100"></div>
    </div>

    <div class="form-group text-center" >
      <div class="col-m-12">
        <%= form.submit 'Confirmar', class: 'btn btn-primary' %>
        <%= link_to 'Volver', posts_path, class: 'btn btn-warning' %>
      </div>
    </div>
  </fieldset>
  <% end %>
</div>
