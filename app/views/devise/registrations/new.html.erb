<div class="text-center text-white">
  <h1>Crear Cuenta</h1>
</div>


<span class="notice"><%= notice %></span>
<span class="alert"><%= alert %></span>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

<div class="container">
  <div class="row py-5 mt-4 align-items-center">
    <!-- For Demo Purpose -->
    <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
      <img src='<%= asset_path "bandeja.png" %>' class="img-fluid mb-3 d-none d-md-block">
    </div>

    <!-- Registeration Form -->
    <div class="col-md-7 col-lg-6 ml-auto">
      <form action="#">
        <div class="row">


          <!-- First Name -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-user text-muted"></i>
              </span>
            </div>
            <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nombre', class: "form-control bg-white border-left-0 border-md" %>
          </div>

          <!-- Last Name -->
          <div class="input-group col-lg-6 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-user text-muted"></i>
              </span>
            </div>
            <%= f.text_field :lastname, autofocus: true, class: 'form-control', placeholder: 'Apellido', class: "form-control bg-white border-left-0 border-md" %>
          </div>

          <!-- Email Address -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-envelope text-muted"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true,  class: 'form-control', placeholder: 'tu@correo.com', class:"form-control bg-white border-left-0 border-md" %>
          </div>


          <!-- Password -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-lock text-muted"></i>
              </span>
            </div>

            <%= f.password_field :password,  autocomplete: "off", class: 'form-control', placeholder: 'Contraseña', class:"form-control bg-white border-left-0 border-md" %>
            <div class=" text-white">
              <% if @minimum_password_length %>
              <em>(Al menos <%= @minimum_password_length %> caracteres)</em>
              <% end %>
            </div>

          </div>


          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-lock text-muted"></i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña',  class: "form-control bg-white border-left-0 border-md" %>
          </div>
          <!-- Password Confirmation -->


          <!-- Submit Button -->


          <div class="form-group col-lg-12 mx-auto mb-0">
            <span class="font-weight-bold" > <%= f.submit 'Registrarse', class: 'btn btn-primary btn-block py-2 font-weight-bold' %></span>
          </div>

          <!-- Divider Text -->
          <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
            <div class="border-bottom w-100 ml-5"></div>
            <span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
            <div class="border-bottom w-100 mr-5"></div>
          </div>



          <!-- Social Login -->
          <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
          <div class="form-group col-lg-12 mx-auto">
            <%= link_to "Ingresar con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "font-weight-bold btn btn-primary btn-block py-2 btn-facebook text-white" %>
          </div>
          <% end %>
          <% end %>
          

          <!-- Already Registered -->
          <div class="text-center w-100">
            <p class="text-muted font-weight-bold">Ya estas Registrado? <%= render "devise/shared/links" , class:"text-primary ml-2" %></p>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
