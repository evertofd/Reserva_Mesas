<div class="text-center text-white">
  <h1>Iniciar Sesión</h1>
</div>

<span class="notice"><%= notice %></span>
<span class="alert"><%= alert %></span>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
<div class="container">
  <div class="row py-5 mt-4 align-items-center">
    <!-- For Demo Purpose -->
    <div class="col-md-5 pr-lg-5 mb-5 mb-md-0">
      <img src='<%= asset_path "bandeja.png" %>' class="img-fluid mb-3 d-none d-md-block">
    </div>

    <!-- Registeration Form -->
    <div class="col-md-7 col-lg-6 ml-auto">
      <form action="#">
        <div class="row">


          <!-- Email Address -->
          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-envelope text-muted"></i>
              </span>
            </div>
            <%= f.email_field :email, autofocus: true,  class: 'form-control', placeholder: 'tu@correo.com', class:"form-control bg-white border-left-0 border-md" %>
          </div>


          <!-- Password -->

          <div class="input-group col-lg-12 mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text bg-white px-4 border-md border-right-0">
                <i class="fa fa-lock text-muted"></i>
              </span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña',  class: "form-control bg-white border-left-0 border-md" %>

          </div>
          <div class="checkbox text-white ">
            <label class = "text-center">
              <%= f.check_box :remember_me %>
              <%= f.label 'Recuérdame' %>
            </label>
          </div>


          <!-- Submit Button -->


          <div class="form-group col-lg-12 mx-auto mb-0">
            <span class="font-weight-bold" > <%= f.submit 'Iniciar Sesión', class: 'btn btn-primary btn-block py-2 font-weight-bold' %></span>
          </div>



          <!-- Divider Text -->
          <div class="form-group col-lg-12 mx-auto d-flex align-items-center my-4">
            <div class="border-bottom w-100 ml-5"></div>
            <span class="px-2 small text-muted font-weight-bold text-muted">OR</span>
            <div class="border-bottom w-100 mr-5"></div>
          </div>



          <!-- Social Login -->
          <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
          <div class="form-group col-lg-12 mx-auto">
          <%= link_to "Ingresar con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "font-weight-bold btn btn-primary btn-block py-2 btn-facebook text-white" %>
          </div>
          <% end %>
          <% end %>



          <!-- Already Registered -->
          <div class="text-center w-100">
            <p class="text-muted font-weight-bold">No estas Registrado?
              <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Registrate!", new_registration_path(resource_name), class:"text-muted ml-2" %><br />
            <% end %>
            <br>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Olvide mi Clave?", new_password_path(resource_name), class:"text-muted ml-2"%><br />
            <% end %>
          </div>

        </div>
      </form>
    </div>
  </div>
</div>
<% end %>
