<div class="text-center">


<h2 class="ta text-white">Cambiar Contrase単a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nueva Contrase単a",class: 'text-white' %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 6 caracteres minimo)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contrase単a", class: 'text-white' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar contrase単a", class: 'btn btn-primary  py-2 font-weight-bold' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
