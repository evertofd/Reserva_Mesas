
<div class="container">

<p id="notice"><%= notice %></p>

<h1 class="text-center text-white">CALENDARIO DE RESERVACIONES</h1>

    <% @reservations.each do |reservation| %>


    <% reservation.start_date %>
    <% reservation.title %>
    <% reservation.quantity %>
    <% reservation.telephone %>
    <% reservation.commentary %>
    <% reservation.tables.count%>

      <!--  reservation.user.nil??"":reservation.user.email -->
      <!-- reservation.try(:user).try(:email) -->
    <% (reservation.user.nil?)?"-":reservation.try(:user).email %>
    <% reservation.tables.first.space.name %>
    <% link_to 'Show', reservation %>
    <% link_to 'Edit', edit_reservation_path(reservation) %>
    <% link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>


<br>
<div class="text-white text-uppercase" id='calendar' data-token="<%= form_authenticity_token %>"> </div>
<%= render 'modal' %>
</div>
